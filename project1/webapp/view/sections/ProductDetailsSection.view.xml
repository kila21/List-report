<mvc:View 
	xmlns:form="sap.ui.layout.form"
	controllerName="project1.controller.sections.ProductDetailsSection"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	busyIndicatorDelay="0"
	models="{message: ${message}}">

    <form:SimpleForm editable="false">
		<form:content>
			<Label text="{i18n>productFormNameLabel}" class="sapUiTinyMarginTop"/>
			<Input 
			 name="name"
			 value="{detailsFormModel>/name}" 
			 change="onInputChange"
			 editable="{= ${viewStateModel>/editable}}"/>

			<Label text="{i18n>productFormDescriptionLabel}"/>
			<Input 
			 name="description"
			 value="{detailsFormModel>/description}" 
			 editable="{= ${viewStateModel>/editable}}"
			 change="onInputChange"/>
		
			<Label text="{i18n>productFormRatingLabel}" class="sapUiTinyMarginTop"/>
			<Input
			 name="rating"
			 type="Number"
			 value="{detailsFormModel>/rating}" 
			 editable="{= ${viewStateModel>/editable}}"
			 change="onInputChange"/>

			<Label text="{i18n>productFormReleaseDateLabel}" class="sapUiTinyMarginTop"/>
			<DatePicker 
			 name="releaseDate"
			 value="{detailsFormModel>/releaseDate}" 
			 editable="{= ${viewStateModel>/editable}}"
			 change="onInputChange"/>

			<Label text="{i18n>productFormDiscountDateLabel}" class="sapUiTinyMarginTop"/>
			<DatePicker 
			 name="discountDate"
			 value="{detailsFormModel>/discountDate}" 
			 editable="{= ${viewStateModel>/editable}}"
			 change="onInputChange"/>

			<Label text="{i18n>productFormPriceLabel}" class="sapUiTinyMarginTop"/>
			<Input 
			 name="price"
			 type="Number" 
			 value="{detailsFormModel>/price}"
			 editable="{= ${viewStateModel>/editable}}"
			 change="onInputChange"/>

			<Label text="{i18n>productFormCategoriesLabel}" class="sapUiTinyMarginTop"/>
			<MultiComboBox 
			 name="categories"
			 selectedKeys="{detailsFormModel>/categories}" 
			 editable="{= ${viewStateModel>/editable}}"
			 items="{categoriesModel>/categories}"
			 change="onInputChange">
				<core:Item 
				 key="{categoriesModel>id}"
				 text="{categoriesModel>name}"/>
			</MultiComboBox>
		</form:content>
	</form:SimpleForm>
        
</mvc:View>