<mvc:View 
	xmlns:form="sap.ui.layout.form"
	controllerName="project1.controller.sections.ProductDetailsSection"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	busyIndicatorDelay="0">

    <form:SimpleForm editable="false">
		<form:content>
			<Label text="Name"/>
			<Input value="{detailsFormModel>/name}" editable="{= ${viewStateModel>/editable}}"/>

			<Label text="Description"/>
			<Input value="{detailsFormModel>/description}" editable="{= ${viewStateModel>/editable}}"/>
		

			<Label text="Rating"/>
			<Input type="Number" value="{detailsFormModel>/rating}" editable="{= ${viewStateModel>/editable}}"/>

			<Label text="Release Date"/>
			<DatePicker value="{detailsFormModel>/releaseDate}" editable="{= ${viewStateModel>/editable}}"/>

			<Label text="Discount Date"/>
			<DatePicker value="{detailsFormModel>/discountDate}" editable="{= ${viewStateModel>/editable}}"/>

			<Label text="Price"/>
			<Input type="Number" value="{detailsFormModel>/price}" editable="{= ${viewStateModel>/editable}}"/>

			<Label text="Categories"/>
			<MultiComboBox 
			 selectedKeys="{detailsFormModel>/categories}" 
			 editable="{= ${viewStateModel>/editable}}"
			 items="{categoriesModel>/categories}">
				<core:Item 
				 key="{categoriesModel>id}"
				 text="{categoriesModel>name}"/>
			</MultiComboBox>
			
		</form:content>
	</form:SimpleForm>
        
</mvc:View>